<Window x:Class="Bai7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai7"
        mc:Ignorable="d"
       ResizeMode="NoResize"
        Title="Bán vé rạp chiếu bóng" Height="570" Width="600">
    <Window.Resources>
        <Style x:Key="btn" TargetType="Button">
            <Setter Property="Width" Value="80"></Setter>
            <Setter Property="Height" Value="60"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="10,20,10,0"></Setter>
            <Setter Property="Background" Value="White"></Setter>
        </Style>

        <Style x:Key="selectOpt" TargetType="Button">

            <Setter Property="Width" Value="110"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Margin" Value="5,15,10,0"></Setter>
            <Setter Property="Background" Value="#fff"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <StackPanel>
            <TextBox IsReadOnly="true" IsEnabled="False" FontSize="45" Foreground="#ED940B" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="Auto" Height="100" BorderThickness="3" TextChanged="TextBox_TextChanged">MÀN ẢNH</TextBox>
            <StackPanel Margin="20,20,20,10" Height="410">

                <Border BorderThickness="1"  BorderBrush="#e1e1e1" HorizontalAlignment="Center" Height="264">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource btn}" Content="1" Tag="5000" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn }" Content="2" Tag="5000" Click="chooseBtn_Click" ></Button>
                            <Button Style="{StaticResource btn}" Content="3" Tag="5000"  Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="4" Tag="5000" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="5" Tag="5000"  Click="chooseBtn_Click"></Button>
                        </StackPanel>



                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource btn}" Content="6" Tag="6500" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn }" Content="7" Tag="6500" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="8" Tag="6500" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="9" Tag="6500" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="10" Tag="6500"  Click="chooseBtn_Click"></Button>
                        </StackPanel>



                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource btn}" Content="11" Tag="8000" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn }" Content="12" Tag="8000"  Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="13"  Tag="8000" Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="14"  Tag="8000"  Click="chooseBtn_Click"></Button>
                            <Button Style="{StaticResource btn}" Content="15"  Tag="8000"  Click="chooseBtn_Click"></Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="35,20,0,0" >
                    <TextBlock Margin="0,10,20,0">Thành tiền: </TextBlock>
                    <TextBox Width="280" Padding="10"  x:Name="totalPrice" Text="{Binding Total}"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="30,0,0,0" Height="70">
                    <Button Style="{StaticResource selectOpt}" Content="Chọn" Click="selectBtn_Click"></Button>
                    <Button Style="{StaticResource selectOpt}" Content="Hủy bỏ" Click="cancelBtn_Click"></Button>
                    <Button Style="{StaticResource selectOpt}" Content="Kết thúc" Click="endBtn_Click"></Button>
                </StackPanel>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
